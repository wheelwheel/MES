<div class="container-fluid mt-3">
    <div class="row d-flex justify-content-center">
        <div class="col-lg-4 col-md-6 col-sm-10 col-xs-12">
            <div class="panel panel-group border border-secondary">
                <div class="panel panel-primary ">
                    <div class="panel panel-heading  bg-info">
                        <h4>製程資料維護</h4>
                    </div>
                    <div class="panel-body">
                        <table class="table">
                            <tr>
                                <td class="">
                                    @Html.ActionLink("新增", "Create", "Process", null, new { @class = "btn btn-success" })
                                </td>
                                <td class="">
                                    @Html.DisplayNameFor(m => m.processList.First().proc_no)
                                </td>
                                <td class="">
                                    @Html.DisplayNameFor(m => m.processList.First().proc_name)
                                </td>
                            </tr>
                            @foreach (var item in Model.processList)
                            {
                                <tr>
                                    <td class="">
                                        @Html.ActionLink("修改", "Edit", "Process", new { id = item.rowid }, new { @class = "btn btn-primary" })
                                        @Html.ActionLink("刪除", "Delete", "Process", new { id = item.rowid }, new { @class = "btn btn-danger", onclick = "return confirm('是否確定要刪除?');" })
                                    </td>
                                    <td class="">
                                        @Html.DisplayFor(modelItem => item.proc_no)
                                    </td>
                                    <td class="">
                                        @Html.DisplayFor(modelItem => item.proc_name)
                                    </td>
                                </tr>
                            }
                        </table>
                        <div class="bg-secondary pt-1">
                            @Html.PagedListPager((IPagedList)Model.processList, x => Url.Action("MasterPage", new { page = x }))
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
