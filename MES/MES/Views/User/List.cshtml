@model IEnumerable<MES.Models.users>
@using PagedList.Mvc;
@using PagedList;

@{
    ViewBag.Title = "員工列表";
}

<link href="~/Content/PagedList.css" rel="stylesheet" />
<link rel="stylesheet" href="@Url.Content("~/css/user/user_list.css")">

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-12">
            <div class="main-box clearfix">
                <div class="table-responsive">
                    @Html.ActionLink("新增資料", "Create", "User", null, new { @class = "btn btn-success" })
                    <table class="table user-list">
                        <thead>
                            <tr>
                                <th scope="col" nowrap="nowrap">
                                    <span>@Html.DisplayNameFor(model => model.m_account)</span>
                                </th>
                                <th scope="col">
                                    <span> @Html.DisplayNameFor(model => model.email_user)</span>
                                </th>
                                <th scope="col" nowrap="nowrap">
                                    <span>  @Html.DisplayNameFor(model => model.birthday)</span>
                                </th>
                                <th scope="col" nowrap="nowrap">
                                    <span>  @Html.DisplayNameFor(model => model.address)</span>
                                </th>
                                <th scope="col" nowrap="nowrap">
                                    <span> @Html.DisplayNameFor(model => model.id)</span>
                                </th>
                                <th scope="col" nowrap="nowrap">
                                    <span> @Html.DisplayNameFor(model => model.phone)</span>
                                </th>
                                <th scope="col" nowrap="nowrap"><span>編輯</span></th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tbody>
                                <tr>
                                    <td nowrap="nowrap">
                                        <img src="@Url.Content(UserAccount.UploadImageUrl(item.m_account))" style="height:6vh;width:10vw;" alt="">

                                        <h3 class="user-link" nowrap="nowrap"> @Html.DisplayFor(modelItem => item.m_name)</h3>
                                        <span class="user-subhead"> @Html.DisplayFor(modelItem => item.m_account)</span>
                                    </td>
                                    <td nowrap="nowrap">
                                        @Html.DisplayFor(modelItem => item.email_user)
                                    </td>
                                    <td nowrap="nowrap">
                                        @Html.DisplayFor(modelItem => item.birthday)
                                    </td>
                                    <td nowrap="nowrap">
                                        @Html.DisplayFor(modelItem => item.address)
                                    </td>
                                    <td nowrap="nowrap">
                                        @Html.DisplayFor(modelItem => item.id)
                                    </td>
                                    <td nowrap="nowrap">
                                        @Html.DisplayFor(modelItem => item.phone)
                                    </td>
                                    @*<td nowrap="nowrap">
                            @Html.ActionLink("修改", "Edit", "User", new { i = item.rowid }, new { @class = "table-link" })
                            @Html.ActionLink("刪除", "Delete", "User", new { i = item.rowid }, new { @class = "table-link", onclick = "return confirm('確定刪除?')" })
                        </td>*@

                                <td style="width: 20%;" nowrap="nowrap">
                                    <a href="@Url.Action("Edit", "User", new { i = item.rowid })" class="table-link">
                                        <span class="fa-stack">
                                            <i class="fa fa-square fa-stack-2x"></i>
                                            <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                                        </span>
                                    </a>
                                    <a href="@Url.Action("Delete", "User", new { i = item.rowid } )" onclick="return confirm('確定刪除?')" class="table-link danger">
                                        <span class="fa-stack">
                                            <i class="fa fa-square fa-stack-2x"></i>
                                            <i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
                                        </span>
                                    </a>
                                    <a href="@Url.Action("UserUploadimage", "User", new { id = item.rowid })" class="table-link">
                                        <span class="fa-stack">
                                            <i class="fa fa-square fa-stack-2x"></i>
                                            <i class="fa fa-picture-o fa-stack-1x fa-inverse"></i>
                                        </span>
                                    </a>
                                </td>
                                </tr>

                            </tbody>
                        }
                    </table>
                    <div class="float-right">
                        @Html.PagedListPager((IPagedList)Model, m => Url.Action("List", new { page = m }), new PagedListRenderOptions()
                        {
                            LinkToFirstPageFormat = "第一頁",
                            LinkToPreviousPageFormat = "上一頁",
                            LinkToNextPageFormat = "下一頁",
                            LinkToLastPageFormat = "最末頁",
                            //DisplayLinkToFirstPage=PagedListDisplayMode.Always,
                            //DisplayLinkToLastPage=PagedListDisplayMode.Always,
                            //DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                            //DisplayLinkToNextPage =PagedListDisplayMode.Always,


                            LiElementClasses = new List<string> { "modal-4 " }
                        })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


