@model MES.Models.re_complete_detail

@{
    ViewBag.Title = "回報單明細修改";
}
@section scripts{
    <script src="@Url.Content("~/Scripts/bootstrap-datetimepicker.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-datetimepicker.zh-TW.js")"></script>
}
<link rel="stylesheet" href="@Url.Content("~/Content/bootstrap-datetimepicker.min.css")">


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal mt-2 ">
        <div class="container-fluid">
            <div class="row d-flex justify-content-center">
                <div class="col-lg-5 col-md-6 col-sm-10 ">
                    <div class="panel panel-group border border-secondary">
                        <div class="panel panel-primary">
                            <div class="panel panel-heading  bg-info mb-2">
                                <h4>回報單明細修改</h4>
                            </div>
                            <div class="panel panel-body mt-2 mb-2">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.rowid)
                                @Html.HiddenFor(model => model.re_complete_no)

                                <div class="row row-group">
                                    @Html.LabelFor(model => model.proc_no, htmlAttributes: new { @class = "control-label col-md-3 ColumnHeader" })
                                    <div class="col-md-9">
                                        @Html.DropDownListFor(model => model.proc_no, new SelectList(ViewBag.ProcessList, "Value", "Text"), new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.proc_no, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="row row-group">
                                    @Html.LabelFor(model => model.mach_no, htmlAttributes: new { @class = "control-label col-md-3 ColumnHeader" })
                                    <div class="col-md-9">
                                        @Html.DropDownListFor(model => model.mach_no, new SelectList(ViewBag.MachineList, "Value", "Text"), new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.mach_no, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="row row-group">
                                    @Html.LabelFor(model => model.value1, htmlAttributes: new { @class = "control-label col-md-3 ColumnHeader" })
                                    <div class="col-md-9">
                                        @Html.EditorFor(model => model.value1, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.value1, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="row row-group">
                                    @Html.LabelFor(model => model.value2, htmlAttributes: new { @class = "control-label col-md-3 ColumnHeader" })
                                    <div class="col-md-9">
                                        @Html.EditorFor(model => model.value2, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.value2, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="row row-group">
                                    @Html.LabelFor(model => model.value3, htmlAttributes: new { @class = "control-label col-md-3 ColumnHeader" })
                                    <div class="col-md-9">
                                        @Html.EditorFor(model => model.value3, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.value3, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="row row-group">
                                    @Html.LabelFor(model => model.user_no, htmlAttributes: new { @class = "control-label col-md-3 ColumnHeader" })
                                    <div class="col-md-9">
                                        @Html.DropDownListFor(model => model.user_no, new SelectList(ViewBag.UserList, "Value", "Text"), new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.user_no, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="row row-group">
                                    @Html.LabelFor(model => model.start_time, htmlAttributes: new { @class = "control-label col-md-3 ColumnHeader" })
                                    <div class="col-md-9">
                                        <div class="input-group date start_datetime">
                                            @Html.EditorFor(model => model.start_time, new { htmlAttributes = new { @class = "form-control" } })
                                            <span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
                                        </div>
                                        @Html.ValidationMessageFor(model => model.start_time, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="row row-group">
                                    @Html.LabelFor(model => model.end_time, htmlAttributes: new { @class = "control-label col-md-3 ColumnHeader" })
                                    <div class="col-md-9">
                                        <div class="input-group date end_datetime">
                                            @Html.EditorFor(model => model.end_time, new { htmlAttributes = new { @class = "form-control" } })
                                            <span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
                                        </div>
                                        @Html.ValidationMessageFor(model => model.end_time, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="row row-group">
                                    @Html.LabelFor(model => model.qty, htmlAttributes: new { @class = "control-label col-md-3 ColumnHeader" })
                                    <div class="col-md-9">
                                        @Html.EditorFor(model => model.qty, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.qty, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="row row-group">
                                    @Html.LabelFor(model => model.remark, htmlAttributes: new { @class = "control-label col-md-3 ColumnHeader" })
                                    <div class="col-md-9">
                                        @Html.EditorFor(model => model.remark, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.remark, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="row row-group">
                                    <div class="col-md-12">
                                        <input type="submit" value="儲存" class="btn btn-primary" />
                                        @Html.ActionLink("返回列表", "List", "Re_Complete", new { page = AppSession.MasterPage }, new { @class = "btn btn-success" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


<script type="text/javascript">
    $('.start_datetime').datetimepicker({
        language: 'zh-TW',
        locale: {
            format: "yyyy/MM/dd hh:mm:ss"
        },      
        startDate: new Date,
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        forceParse: 0,
        showMeridian: 1,
        
    });

    $('.end_datetime').datetimepicker({
        language: 'zh-TW',
        
        startDate: new Date,
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        forceParse: 0,
        showMeridian: 1,
        format: "yyyy/MM/dd hh:mm:ss"
    });
</script>